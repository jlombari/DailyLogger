<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <RootNamespace>Daily_Logger</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <StartupObject>Daily_Logger.Program</StartupObject>
    <ApplicationIcon>DailyLogger.ico</ApplicationIcon>
    <Version>0.1.0.1</Version>
    <Authors>Jerremy Lombari</Authors>
    <Copyright>GNU GPL-3.0</Copyright>
    <PackageLicenseFile>GNU_GPL3.0.txt</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="DailyLogger.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\Desktop\GNU_GPL3.0.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>